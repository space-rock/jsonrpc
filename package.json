{
  "name": "@space-rock/jsonrpc",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "codegen": "pnpm --filter @space-rock/jsonrpc-codegen generate && pnpm format",
    "build": "pnpm -r build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "pnpm -r run clean && rimraf coverage",
    "summary": "node scripts/summary.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "release": "pnpm format:check && pnpm type-check && pnpm build"
  },
  "devDependencies": {
    "@types/node": "~22.16.4",
    "@vitest/coverage-v8": "~3.2.4",
    "prettier": "~3.6.2",
    "rimraf": "~6.0.1",
    "tsdown": "^0.14.2",
    "tslib": "~2.8.1",
    "typescript": "~5.8.3",
    "vitest": "~3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.15.1"
}
